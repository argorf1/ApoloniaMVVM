<Application x:Class="ApoloniaWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ApoloniaWPF" 
             xmlns:v="clr-namespace:ApoloniaWPF.View"
             xmlns:vm="clr-namespace:ApoloniaWPF.ViewModel">

    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <v:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <v:AdminView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProcessDesignerViewModel}">
            <v:ProcessDesignerView/>
        </DataTemplate>
    </Application.Resources>
</Application>
